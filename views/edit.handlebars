<div class="container">
  <div class="row">
    <div class="col-md-6 m-auto">
      <div class="card card-body mt-4">
        <form action="/record/{{record.id}}/edit?_method=PUT" method="POST">
          <div class="row">
            <span class="col-sm-3"><small>*必填欄位</small></span>
            <h3 class="text-center col-sm-9">修改支出項目</h3>
          </div>
          <div class="form-group row mb-5">
            <label for="name" class="col-sm-3 col-form-label">名稱*：</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="name" placeholder="支出項目" name="name" value="{{record.name}}"
                required>
            </div>
          </div>
          <div class="form-group row mb-5">
            <label for="date" class="col-sm-3 col-form-label">日期*：</label>
            <div class="col-sm-9">
              <input type="date" class="form-control" id="date" placeholder="支出日期" name="date" value="{{record.date}}"
                required>
            </div>
          </div>
          <div class="form-group row mb-5">
            <label class="col-sm-3 col-form-label" for="category">類別*</label>
            <div class="col-sm-9">
              <select class="custom-select my-1 mr-sm-3 aria-label" id="category" name="category"
                value="{{record.category}}" required>
                <option value="">請選擇</option>
                <option value="家居物業">家居物業</option>
                <option value="交通出行">交通出行</option>
                <option value="休閒娛樂">休閒娛樂</option>
                <option value="餐飲食品">餐飲食品</option>
                <option value="其他">其他</option>
              </select>
            </div>
          </div>
          <div class="form-group row mb-5">
            <label for="amount" class="col-sm-3 col-form-label">金額*：</label>
            <div class="col-sm-9">
              <input type="text" class="form-control" id="amount" placeholder="支出金額" name="amount"
                value="{{record.amount}}" required>
            </div>
          </div>
          <div class="form-group row d-flex justify-content-end">
            <div class="col-sm-9">
              <button type="submit" class="btn btn-primary btn-block">更新</button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>