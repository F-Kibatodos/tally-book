        </div>
      </div>
    </div>
  </div>
</div>
<ul class="list-group">
  {{#each record}}
  <li class="list-group-item">
    <div class="row">
      <div class="col-auto mr-auto">
        <h4 class="d-inline" style="vertical-align: middle;">{{this.name}}</h4>
        <h4>{{this.date}}</h4>
      </div>
      <div class="col-auto">
        <a href="/record/{{this.id}}" class="btn btn-secondary">detail</a>
        <a href="/record/{{this.id}}/edit?_method=PUT" class="btn btn-success">edit</a>
        <form action="/record/{{this.id}}/delete?_method=DELETE" method="POST" style="display: inline-block;">
          <button type="submit" class="btn btn-danger">delete</button>
        </form>
      </div>
    </div>
  </li>
  {{/each}}
</ul>
<a href="/record/new" class="btn btn-primary">新增</a>