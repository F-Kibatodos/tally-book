<div class="container my-3">
  <div class="row">
    <div class="d-flex justify-content-center mx-auto">
      <div class="dropdown mr-3">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          月份
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <a class="dropdown-item" href="/search?keyword=-01-">一月</a>
          <a class="dropdown-item" href="#">二月</a>
          <a class="dropdown-item" href="#">三月</a>
          <a class="dropdown-item" href="#">四月</a>
          <a class="dropdown-item" href="#">五月</a>
          <a class="dropdown-item" href="/search?keyword=-06-">六月</a>
          <a class="dropdown-item" href="/search?keyword=-07-">七月</a>
          <a class="dropdown-item" href="#">八月</a>
          <a class="dropdown-item" href="#">九月</a>
          <a class="dropdown-item" href="#">十月</a>
          <a class="dropdown-item" href="#">十一月</a>
          <a class="dropdown-item" href="#">十二月</a>
        </div>
      </div>
      <div class="dropdown">
        <a class="btn btn-secondary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown"
          aria-haspopup="true" aria-expanded="false">
          類別
        </a>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <a class="dropdown-item" href="/search?keyword=家居物業"><i class="fas fa-home"></i> 家居物業</a>
          <a class="dropdown-item" href="/search?keyword=交通出行"><i class="fas fa-shuttle-van"></i> 交通出行</a>
          <a class="dropdown-item" href="/search?keyword=休閒娛樂"><i class="fas fa-grin-beam"></i> 休閒娛樂</a>
          <a class="dropdown-item" href="/search?keyword=餐飲食品"><i class="fas fa-utensils"></i> 餐飲食品</a>
          <a class="dropdown-item" href="/search?keyword=其他"><i class="fas fa-pen"></i> 其他</a>
        </div>
      </div>
    </div>
  </div>
  <div class="mt-4">
    <h6 class="text-center">總金額：</h6>
    <h1 class="text-center sum">0</h1>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">類別</th>
        <th scope="col">項目</th>
        <th scope="col">花費</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      {{#each record}}
      <tr class="record">
        <td>
          <div class="category">{{this.category}}</div>
        </td>
        <td>
          <div class="name">
            <h5>{{this.name}}</h5>
            <small>{{this.date}}</small>
          </div>
        </td>
        <td id="cost">{{this.cost}}</td>
        <td class="d-flex justify-content-end">
          <a href="/record/{{this.id}}/edit" class="btn btn-info mr-3">修改</a>
          <form action="/record/{{this.id}}/delete?_method=DELETE" method="POST" style="display: inline-block;">
            <button type="submit" class="btn btn-danger">刪除</button>
          </form>
        </td>
      </tr>
      {{/each}}

    </tbody>
  </table>
  <div class="row">
    <a href="/record/new" class="btn btn-primary btn-block col-6 mx-auto">新增</a>
  </div>
</div>