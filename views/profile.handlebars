<div class="row container mx-auto my-3">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        Edit
      </h1>
      {{> profile-msg}}
      <form action="/user/profile/{{user.id}}?_method=PUT" method="POST">
        <div class="form-group">
          <label for="name">更改名稱 <small>(不接受空白頭尾，字元間不超過一個空格)</small></label>
          <input type="text" id="name" name="name" class="form-control" placeholder="名稱" value="{{user.name}}"
            required />
        </div>
        <div class="d-flex justify-content-between mb-3 align-items-center">
          <div><i class="fas fa-key"></i> 更改密碼</div> <button class="btn btn-primary change-password"
            type="button">編輯</button>
        </div>
        <div class="hidden"></div>
        <button type="submit" class="btn btn-primary btn-block">
          修改
        </button>
      </form>
    </div>
  </div>
</div>